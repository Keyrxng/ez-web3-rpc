{
  "name": "@keyrxng/ez-web3-rpc",
  "version": "0.1.2",
  "description": "Pragmatic RPC tooling for EVM stacks â€” discover, measure, and wrap JSON-RPC providers with latency-aware selection, retries, and optional consensus helpers.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "author": "@Keyrxng",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "format": "run-s format:lint format:prettier format:cspell",
    "format:lint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "format:cspell": "npx tsx .github/cspell.ts",
    "knip": "knip",
    "knip-ci": "knip --no-exit-code --reporter json",
    "prepare": "husky install",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "build:index": "tsx build/esbuild-build.ts",
    "build": "run-s clean build:index build:types",
    "postinstall": "git submodule update --init --recursive",
    "test:anvil": "npx tsx ./tests/anvil.ts",
    "test": "jest --runInBand --silent",
    "bench:compare": "npx tsx benchmarks/compare-handlers.ts",
    "clean": "rm -rf dist",
    "smoke": "./scripts/smoke/run-smoke.sh"
  },
  "keywords": [
    "typescript",
    "ethereum",
    "rpc",
    "web3",
    "chainlist",
    "providers",
    "evm",
    "evm tooling"
  ],
  "dependencies": {
    "@ethersproject/providers": "5.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@cspell/dict-node": "^4.0.3",
    "@cspell/dict-software-terms": "^3.3.18",
    "@cspell/dict-typescript": "^3.1.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "cspell": "^8.4.0",
    "esbuild": "^0.20.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-sonarjs": "^0.24.0",
    "husky": "^9.0.11",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "jest-md-dashboard": "0.8.0",
    "knip": "5.27.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.3",
    "ts-jest": "29.2.3",
    "ts-node": "10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
